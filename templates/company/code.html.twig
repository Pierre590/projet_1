{% extends 'base.html.twig' %}

{% block title %}Employés{% endblock %}

{% block body %}
    <div class="container">
        <form class="" action="" method="post">
            <div class="jumbotron mt-4 text-center">
                <input type="text"  name="code" style="width:100%; text-align: center;" value="{{ code }}">
                <hr class="my-4">
                <p>Transmettez ce code à vos employés, qui après leur connexion via google
                    pourront renseigner ce code afin d'être lié à votre entreprise</p>
                <p class="lead">
                    <a class="btn btn-primary btn-lg" role="button"
                        type="submit" name="submit" value="Valider">Valider
                    </a>
                </p>
            </div>
        </form>
    </div>

{% endblock %}
