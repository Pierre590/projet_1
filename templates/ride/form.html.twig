{% extends 'base.html.twig' %}

{% block title %}Formulaire{% endblock %}

{% block body %}

<style>
    #form_schedule .form-control { width: auto; }
</style>

<div class="container">
    <div class="card border-success mt-3 mb-3">
        <div class="card-header text-center">Cr√©er votre trajet</div>
        <div class="card-body">

            {{ form_start(form) }}
                {{ form_row(form.schedule) }}
                {{ form_row(form[type]) }}
                {{ form_row(form.spaceAvailable) }}
                    <small id="passwordHelpBlock" class="form-text text-muted mb-3">
                        Renseignez ce champ avec un chiffre.
                    </small>
                {{ form_row(form.observations) }}
                    <small id="passwordHelpBlock" class="form-text text-muted mb-3">
                        Lieu de rendez-vous, retard ou ras si champ vide.
                    </small>
            {{ form_end(form) }}

        </div>
    </div>
</div>

{% endblock %}
